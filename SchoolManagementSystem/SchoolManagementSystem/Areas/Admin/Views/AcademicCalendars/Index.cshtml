@model IEnumerable<SchoolManagement.DataAccess.Models.AcademicCalendar>

@{
    ViewData["Title"] = "AcademicCalendars";
}

<div class="content">
    <div class="title-info">
        <p>AcademicCalendars</p>
        <i class="fas fa-chart-bar"></i>
    </div>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TargetGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Advisor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Advisor.FirstName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.EventID" class="button">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EventID" class="button">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EventID" class="button">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
